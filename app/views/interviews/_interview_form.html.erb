<%= form_for([@project, @interview], :html => {:class => 'form-horizontal'}) do |f| %>

  <div class="form-group">                
    <div class="col-lg-8">
      <%= f.text_field :name, class: 'pull-left form-control', placeholder: 'Customer Name' %>
    </div>
  </div>
 
  <div class="form-group">                 
    <div class="col-lg-10">
      <%= f.text_area :notes, class:'form-control', rows: '7', placeholder: 'Notes' %>
    </div>
  </div>

  <div class="form-group">                    
    <div class="col-lg-10">
      <%= f.text_field :learning, class:'form-control', placeholder: 'Key Learning' %>
    </div>
  </div>  

  <div class="form-group">                    
    <div class="col-lg-10">
      <h5>Star Rating</h5>
      <div class="rateit" data-rateit-resetable="false" data-rateit-value="<%= @interview.fit %>" data-rateit-ispreset="true" id="rating" ></div>
      <%= f.hidden_field :fit %>
      <hr />
    </div>
  </div>  
 
  <div class="form-group">
    <div class="col-lg-10">
      <%= f.submit class:'btn btn-sm btn-primary pull-right' %>
    </div>
  </div>
<% end %>

 
<script type='text/javascript'>  
  $(document).trigger('interview_form:load');  
</script>