
<%= render 'projects/page_header' %>


  <div class="container">

    <div class="row">

      <div class="col-md-8 no-padding-right">

        <div class="widget wgreen">
          
          <div class="widget-head">
            <div class="pull-left">Interview</div>
              <div class="btn-group">
                <button class="btn btn-xs btn-default">
                  <i class="fa fa-pencil"></i><%= @interview.id %> <%= link_to 'Edit Interview', edit_project_interview_path(project_id: @project.id, id: @interview.id) %> 
                </button>                               
              </div>            
              <div class="widget-icons pull-right">
                <a href="#" id="expand"><i class="fa fa-expand r"></i></a>
              </div>
            <div class="clearfix"></div>
          </div>

          <div class="widget-content">
            <div class="padd">

              <br />
              <!-- Show Entry -->
              <%= form_for([@project, @interview], :html => {:class => 'form-horizontal'}) do |f| %>

                <div class="form-group">                
                  <div class="col-lg-8">
                    <h3><%= @interview.name %></h3>
                  </div>
                </div>
               
                <div class="form-group">                 
                  <div class="col-lg-10">
                    <p><%= @interview.notes %></p>
                  </div>
                </div>

                <div class="form-group">                    
                  <div class="col-lg-10">
                    <p><%= @interview.learning %></p>
                  </div>
                </div> 

                <div class="form-group">                    
                  <div class="col-lg-10">
                    <p><%= @interview.fit %></p>
                    <div class="rateit" data-rateit-resetable="false" data-rateit-value="<%= @interview.fit %>" data-rateit-ispreset="true" data-rateit-readonly="true" id="rating" ></div>
                  </div>
                </div>  
               
              <% end %>

            </div>
          </div>
        </div>  

      </div>

      <%= render 'interviews/interview_panel' %>


    </div>
  </div>

 