<!-- Interview History Widget -->

<div class="col-md-4">
  <!-- Widget -->
  <div class="widget">
    <!-- Widget title -->
    <div class="widget-head">
      <div class="pull-left">All Interviews</div>
      <div class="widget-icons pull-right">
        <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a> 
        <a href="#" class="wclose"><i class="fa fa-times"></i></a>
      </div>  
      <div class="clearfix"></div>
    </div>
    <div class="widget-content">
      <!-- Widget content -->
      <div class="padd">
        <% @project.interviews.each do |interview| %>
          <% if interview.persisted? %>
              <ul class="recent">

              <li>
                <div class="recent-content">
                  <div class ="title"><%= interview.name %></div>
                  <div><%= interview.learning %></div>
                  <div class="recent-meta"><%= interview.created_at %></div>
                  
                  <div class="btn-group pull-right">
                    <button class="btn btn-xs btn-default"><i class="fa fa-pencil"></i><%= interview.id %> <%= link_to 'Edit Interview', edit_project_interview_path(project_id: @project.id, id: interview.id) %> 
                    </button>
            
                  </div>
                  <div class="clearfix"></div>
                </div>
              </li>
                            
          </ul>
        <% end %> 
        <% end %>  
        

      </div>
      <!-- Widget footer -->
      <div class="widget-foot">

        
          <ul class="pagination pagination-sm pull-right">
            <li><a href="#">Prev</a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">Next</a></li>
          </ul>
        
        <div class="clearfix"></div>

      </div>
    </div>

  </div> 
</div>    


<!-- Interview History Widget Ends -->